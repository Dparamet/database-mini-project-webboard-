<!doctype html>
<html lang="th">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= typeof title!=="undefined"? title+" · " : "" %>Mini Webboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body class="bg-light">
  <!-- Topbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">MiniForum</a>
      <form class="d-flex ms-auto" method="get" action="/">
        <input class="form-control me-2" type="search" placeholder="Search" name="q" value="<%= q||'' %>">
        <button class="btn btn-outline-light">ค้นหา</button>
      </form>
      <ul class="navbar-nav ms-3">
        <% if (!me) { %>
          <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/thread/new">+ กระทู้ใหม่</a></li>
          <li class="nav-item"><a class="nav-link" href="/profile"><%= me.displayName || me.username %></a></li>
          <li class="nav-item">
            <form action="/logout" method="post"><button class="btn btn-sm btn-warning ms-2">Logout</button></form>
          </li>
        <% } %>
      </ul>
    </div>
  </nav>

  <div class="container my-4">
    <div class="row">
      <!-- Sidebar -->
      <aside class="col-lg-3 mb-3">
        <%- include("_sidebar") %>
      </aside>
      <!-- Main -->
      <main class="col-lg-9">
        <%- body %>
      </main>
    </div>
  </div>
</body>
</html>